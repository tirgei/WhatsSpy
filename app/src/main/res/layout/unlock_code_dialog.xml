<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Enter unlock code"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@color/primaryText"
        android:id="@+id/dialog_title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:enabled="false"
        android:maxLines="1"
        android:gravity="center"
        android:textSize="40sp"
        android:inputType="numberPassword"
        android:layout_below="@+id/dialog_title"
        android:background="@android:color/transparent"
        android:id="@+id/code_edittext"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:visibility="gone"
        android:background="@color/lightGrey"
        android:layout_below="@id/code_edittext"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/divider">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/codeOne"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/darkText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeFour"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/darkText"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeSeven"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/darkText"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeClear"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/darkText"
                android:layout_weight="1"
                android:text="C"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/codeTwo"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/darkText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeFive"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/darkText"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeEight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/darkText"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeZero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/darkText"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/codeThree"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/darkText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeSix"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/darkText"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeNine"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/darkText"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/codeEnter"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/darkText"
                android:layout_weight="1"
                android:text="OK"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>